<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs', "Home" )%>
<body>
    <%- include('partials/nav.ejs', "Home" )%>
    <h1>Welcome!</h1>
    <h1>Welcome to FOODAPP!</h1>
    <main class="container">
        <div>
            <div>
                <% for(let idx=0; idx < posts.length; idx++){ %>
                    <% const post=posts[idx] %>
                    <div class="card" style="width: 15rem;">
                        <img src="<%= post.image %>" class="card-img-top" alt="...">
                        <div class="card-body">
                          <p class="card-text"><%= post.description %></p>
                          <a href="/home/<%= post._id %>"><%= post.name %></a>
                          <form method="POST" action="/home/<%=post._id %>?_method=DELETE">            <!-- "/products/0?_method=DELETE" -->
                            <input type="submit" class=" btn-danger" value="Delete Product"/>
                        </form>
                        </div>
                      </div>
                <% } %>
            </div>
        </div>
      
    </main>
</body>
</html>